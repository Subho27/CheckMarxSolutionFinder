@using CheckMarxSolution.Models
@model ItemModel

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script>
     $(document).ready(function () {
         $("#search_issue").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Home/GetSearch",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item, value: item };
                        }))

                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    })
</script>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">

    <div style="width:80%;margin:0 auto;">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <label style="width:33%;">Search Issue</label>
            <input type="text" id="search_issue" name="search_issue" style="width:33%;height:50px;" />
            <input type="submit" value="Search" style="margin-left:20px;background-color:cornflowerblue;color:white;" />
        }
    </div>
    @if (Model != null)
    {
        <hr />
        <table cellpadding="0" cellspacing="0" border="1" width="100%" style="text-align:center;">
            <tr>
                <td>Search Issue</td>
                <td>Description</td>
                <td>Solution</td>
            </tr>
            <tr>
                <td>@Model.SearchIssue</td>
                <td>@Model.Description</td>
                <td>@Model.Solution</td>
            </tr>
        </table>
    }
</div>
